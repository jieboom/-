@import '../../common/style/animation.wxss';

/* 预告列表样式 */
.movies-container{
  min-height: 100%;
  padding-bottom: 100rpx;
}
.movies-container .movie-item{
  position: relative;
  
  width: 750rpx;

  height: 450rpx;
 

  color: #fff;
  font-size: 26rpx;
  
 
}
.movies-container .item-cover{
   position: absolute;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   background:  no-repeat center bottom;
   background-size: cover;
   opacity: 0.7;
  z-index: 1;
}
.movies-container .item-wrapper{
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end; 
  padding: 30rpx;
  width: 100%;
  height: 100%;
  z-index: 2;
  
}
.movies-container .movie-item .movie-item--desc{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 50rpx;
  opacity: 1;
}
.movies-container .movie-item .movie-item--desc image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;

}
.movies-container .movie-item .desc--text{
  margin-right: 20rpx;
}
.movies-container .movie-item .desc--type{
  font-weight: 200;
}
.movie-item--title{
  
  font-weight: 600;
  font-size: 30rpx;
}


